/* Altar Page Styles - 香案风格 */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #1a252f 0%, #2c3e50 50%, #34495e 100%);
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 水墨晕染背景效果 */
.container::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle, rgba(0, 0, 0, 0.3) 0%, transparent 70%);
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* 传统回纹边框装饰 */
.altar-background {
  width: 100%;
  height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 60rpx;
}

/* 金色双重边框装饰 */
.altar-background::before {
  content: "";
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  border: 4rpx double rgba(212, 175, 55, 0.3);
  border-radius: 10rpx;
  pointer-events: none;
}

/* 祥云纹装饰 */
.altar-background::after {
  content: "";
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  bottom: 40rpx;
  background: repeating-linear-gradient(
    45deg,
    rgba(212, 175, 55, 0.05) 0rpx,
    rgba(212, 175, 55, 0.05) 2rpx,
    transparent 2rpx,
    transparent 20rpx
  );
  pointer-events: none;
  opacity: 0.5;
}

/* Canvas 容器样式 */
.incense-canvas {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}

.controls {
  width: 100%;
  height: 40vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(0deg, rgba(26, 37, 47, 0.8) 0%, rgba(52, 73, 94, 0.8) 100%);
  border-top: 4rpx solid rgba(212, 175, 55, 0.4);
  position: relative;
}

/* 香灰累积样式的进度条 */
.progress-bar {
  width: 80%;
  height: 20rpx;
  background: linear-gradient(90deg, 
    rgba(139, 69, 19, 0.3) 0%, 
    rgba(139, 69, 19, 0.2) 50%,
    rgba(139, 69, 19, 0.3) 100%
  );
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

/* 香灰纹理效果 */
.progress-bar::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 50% 50%, rgba(212, 175, 55, 0.2) 0%, transparent 2px);
  background-size: 10rpx 10rpx;
  opacity: 0.5;
}

.ignite-hint {
  font-size: 40rpx;
  color: #d4af37;
  margin-bottom: 60rpx;
  letter-spacing: 12rpx;
  font-weight: bold;
  text-shadow: 
    0 0 20rpx rgba(212, 175, 55, 0.5),
    0 4rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 香案木纹装饰效果 */
.controls::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(
    90deg,
    rgba(139, 69, 19, 0.15) 0%,
    rgba(139, 69, 19, 0.25) 50%,
    rgba(139, 69, 19, 0.15) 100%
  );
  pointer-events: none;
}

.controls::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(
    90deg,
    rgba(139, 69, 19, 0.15) 0%,
    rgba(139, 69, 19, 0.25) 50%,
    rgba(139, 69, 19, 0.15) 100%
  );
  pointer-events: none;
}

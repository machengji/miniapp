/* Altar Page Styles */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #2c3e50;
}

.altar-background {
  width: 100%;
  height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.controls {
  width: 100%;
  height: 40vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ignite-hint {
  font-size: 32rpx;
  color: #ecf0f1;
  margin-bottom: 40rpx;
}

.progress-bar {
  width: 80%;
  height: 8rpx;
  background-color: #34495e;
  border-radius: 4rpx;
}

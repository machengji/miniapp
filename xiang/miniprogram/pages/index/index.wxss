/* Main Hall Page Styles */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #2c3e50 0%, #1a252f 100%);
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.temple-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #f1c40f;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(241, 196, 15, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: #ecf0f1;
  opacity: 0.8;
}

.prayer-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  width: 100%;
  max-width: 650rpx;
}

.prayer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  border: 2rpx solid rgba(241, 196, 15, 0.3);
  transition: all 0.3s ease;
}

.prayer-item:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.2);
}

.prayer-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.prayer-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ecf0f1;
  margin-bottom: 10rpx;
}

.prayer-desc {
  font-size: 24rpx;
  color: #bdc3c7;
  text-align: center;
}

.merit-float {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(241, 196, 15, 0.9);
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.merit-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.merit-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 30rpx;
  background-color: rgba(44, 62, 80, 0.95);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.footer-btn {
  width: 200rpx;
  height: 70rpx;
  background-color: #f1c40f;
  color: #2c3e50;
  font-size: 28rpx;
  border: none;
  border-radius: 35rpx;
  font-weight: bold;
}

.footer-btn:active {
  background-color: #f39c12;
}

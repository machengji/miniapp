/* Merit Page Styles - 碑刻风格 */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #fdf5e6 0%, #fff8dc 100%);
}

/* 宣纸纹理效果 */
.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  position: relative;
}

.container::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 30%, rgba(0,0,0,0.02) 0%, transparent 30%),
    radial-gradient(circle at 80% 70%, rgba(0,0,0,0.02) 0%, transparent 30%),
    radial-gradient(circle at 50% 50%, rgba(0,0,0,0.01) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.header {
  width: 100%;
  padding: 60rpx 40rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

/* 功德簿题匾样式 */
.title {
  font-size: 64rpx;
  font-weight: bold;
  color: #c0392b;
  letter-spacing: 20rpx;
  text-shadow: 
    2rpx 2rpx 0rpx rgba(0, 0, 0, 0.1),
    0 0 30rpx rgba(192, 57, 43, 0.2);
  position: relative;
  padding: 30rpx 60rpx;
  border: 4rpx double #d4af37;
  background: linear-gradient(145deg, #fff8dc 0%, #fdf5e6 100%);
}

/* 牌匾装饰角 */
.title::before {
  content: "✦";
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  font-size: 32rpx;
  color: #d4af37;
}

.title::after {
  content: "✦";
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 32rpx;
  color: #d4af37;
}

.merit-display {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 60rpx;
  margin-top: 80rpx;
  position: relative;
  z-index: 1;
}

/* 碑刻风格的功德卡片 */
.merit-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 60rpx;
  background: linear-gradient(145deg, #f5f5dc 0%, #fafad2 100%);
  border-radius: 10rpx;
  border: 3rpx solid rgba(139, 69, 19, 0.3);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.15),
    inset 0 2rpx 10rpx rgba(255, 255, 255, 0.5);
  position: relative;
}

/* 竹简装饰线 */
.merit-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 20rpx;
  width: 3rpx;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(139, 69, 19, 0.4) 0%, 
    rgba(139, 69, 19, 0.6) 50%,
    rgba(139, 69, 19, 0.4) 100%
  );
}

.merit-item::after {
  content: "";
  position: absolute;
  top: 0;
  right: 20rpx;
  width: 3rpx;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(139, 69, 19, 0.4) 0%, 
    rgba(139, 69, 19, 0.6) 50%,
    rgba(139, 69, 19, 0.4) 100%
  );
}

.label {
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 30rpx;
  letter-spacing: 8rpx;
  font-weight: 500;
}

/* 书法字体风格的数字 */
.value {
  font-size: 88rpx;
  font-weight: bold;
  color: #c0392b;
  letter-spacing: 8rpx;
  text-shadow: 
    2rpx 2rpx 0rpx rgba(0, 0, 0, 0.1),
    0 0 20rpx rgba(192, 57, 43, 0.15);
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", serif;
}

.history {
  width: 100%;
  margin-top: 80rpx;
  position: relative;
  z-index: 1;
}

.history-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 40rpx;
  letter-spacing: 12rpx;
  text-align: center;
  border-bottom: 3rpx solid rgba(212, 175, 55, 0.3);
  padding-bottom: 20rpx;
}

.actions {
  width: 100%;
  margin-top: auto;
  padding-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

/* 印章效果的返回按钮 */
.back-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(145deg, #c0392b 0%, #8b1a1a 100%);
  color: #d4af37;
  font-size: 36rpx;
  border: 4rpx double #d4af37;
  border-radius: 50rpx;
  font-weight: bold;
  letter-spacing: 8rpx;
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.2.0.3),
    inset 0 2rpx 10rpx rgba(212, 175, 55, 0.3);
  position: relative;
}

.back-btn::before {
  content: "◎";
  position: absolute;
  top: 15rpx;
  left: 25rpx;
  font-size: 32rpx;
}

.back-btn:active {
  background: linear-gradient(145deg, #8b1a1a 0%, #711a1a 100%);
  transform: translateY(2rpx);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.2),
    inset 0 2rpx 10rpx rgba(212, 175, 55, 0.2);
}

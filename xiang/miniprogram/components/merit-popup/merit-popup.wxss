/* Merit Popup Component Styles - 楷书风格 */
.merit-popup {
  position: absolute;
  color: #d4af37;
  font-size: 56rpx;
  font-weight: bold;
  letter-spacing: 8rpx;
  pointer-events: none;
  animation: floatUpCloud 2.5s ease-out forwards;
  text-shadow: 
    0 0 20rpx rgba(212, 175, 55, 0.6),
    2rpx 2rpx 0rpx rgba(0, 0, 0, 0.1);
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", serif;
}

.merit-text {
  display: block;
  padding: 10rpx 20rpx;
  border: 3rpx solid rgba(212, 175, 55, 0.4);
  background: linear-gradient(145deg, rgba(192, 57, 43, 0.1) 0%, rgba(139, 0, 0, 0.05) 100%);
  border-radius: 8rpx;
}

@keyframes floatUpCloud {
  0% {
    transform: translateY(0) scale(0.8);
    opacity: 0;
  }
  20% {
    transform: translateY(-20rpx) scale(1);
    opacity: 1;
  }
  100% {
    transform: translateY(-300rpx) scale(1.3) rotate(5deg);
    opacity: 0;
  }
}

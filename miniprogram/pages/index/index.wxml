<!--index.wxml-->
<navigation-bar title="Aletheia" back="{{false}}" color="white" background="#121212"></navigation-bar>
<scroll-view class="journal-list" scroll-y type="list">
  <view class="header">
    <text class="title">梦境日志</text>
    <text class="subtitle">记录无意识的低语</text>
  </view>

  <view class="dream-card" wx:for="{{dreams}}" wx:key="_id">
    <view class="card-date">
      <text class="day">{{item.day}}</text>
      <text class="month">{{item.month}}</text>
    </view>
    <view class="card-content">
      <text class="card-title">{{item.summary || '无题梦境'}}</text>
      <view class="card-meta">
        <text class="mood-tag" wx:if="{{item.mood && item.mood !== 'unknown'}}">#{{item.mood}}</text>
        <text class="clarity-dots" style="color: #666; margin-left: 10rpx;">清晰度 {{item.clarity}}/5</text>
      </view>
      <text class="card-preview">{{item.content}}</text>
    </view>
  </view>
  
  <view class="empty-state" wx:if="{{dreams.length === 0}}">
    <text>尚未记录任何梦境</text>
    <text class="sub-text">点击右下角按钮，开启你的潜意识探索之旅。</text>
  </view>
  
  <!-- Spacing for FAB -->
  <view style="height: 120rpx;"></view>
</scroll-view>

<view class="fab" bindtap="goToChat">
  <text>+</text>
</view>